{
  "name": "schwaizer-opendata-mcp",
  "version": "1.0.0",
  "description": "MCP server for opendata.swiss (CKAN) by Schwaizer",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "schwaizer-opendata-mcp": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier -w .",
    "docs": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.0",
    "dotenv": "^16.4.5",
    "ky": "^1.4.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "jsdoc": "^4.0.5",
    "prettier": "^3.3.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "ckan",
    "opendata",
    "opendata.swiss",
    "schwaizer"
  ],
  "author": "ishumilin"
}
